<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    style="@style/AppTheme.CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/margin_8dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="@dimen/padding_8dp">

    <RelativeLayout
        android:id="@+id/layout_inner_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_hero"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:adjustViewBounds="true"
                android:contentDescription="Hero Image"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:scaleType="fitCenter"
                tools:ignore="RtlHardcoded"/>


            <ImageView
                android:id="@+id/image_attribute"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:contentDescription="Attribute Image"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:scaleType="centerInside"
                tools:ignore="RtlHardcoded"
                tools:src="@drawable/ic_list_pip_agi"/>

            <TextView
                android:id="@+id/label"
                style="@style/AppTheme.TextView.Info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/image_attribute"
                android:layout_toRightOf="@id/image_hero"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_medium_large"
                tools:text="Ancient Apparition"/>

        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/header"
            android:padding="@dimen/padding_4dp">

            <TextView
                android:id="@+id/text_label_kills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="0"
                android:text="Kills"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="5"
                android:layout_row="0"/>

            <TextView
                android:id="@+id/text_content_kills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_row="0"
                android:gravity="end|right"
                tools:text="4.5"/>

            <TextView
                android:id="@+id/text_label_games_lost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Games Lost"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="1"
                android:layout_row="1"/>

            <TextView
                android:id="@+id/text_content_games_lost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                tools:text="350"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="3"
                android:layout_row="1"/>

            <TextView
                android:id="@+id/text_label_assists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="2"
                android:text="Assists"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="5"
                android:layout_row="2"/>

            <TextView
                android:id="@+id/text_label_deaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="1"
                android:text="Deaths"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="5"
                android:layout_row="1"/>

            <TextView
                android:id="@+id/text_content_deaths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_row="1"
                android:gravity="end|right"
                tools:text="1.2"/>

            <TextView
                android:id="@+id/text_label_win_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Win Rate"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="1"
                android:layout_row="2"/>

            <TextView
                android:id="@+id/text_content_win_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:gravity="end|right"
                tools:text="51%"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="3"
                android:layout_row="2"/>

            <TextView
                android:id="@+id/text_label_games_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Games Won"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="1"
                android:layout_row="0"/>

            <TextView
                android:id="@+id/text_content_assists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_row="2"
                android:gravity="end|right"
                tools:text="6.0"/>

            <TextView
                android:id="@+id/text_label_gpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Gold/Min"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="1"
                android:layout_row="3"/>

            <TextView
                android:id="@+id/text_content_gpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="3"
                tools:text="457"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="3"
                android:layout_row="3"/>

            <TextView
                android:id="@+id/text_label_last_hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="3"
                android:text="Last Hits"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="5"
                android:layout_row="3"/>

            <TextView
                android:id="@+id/text_content_last_hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_row="3"
                tools:text="100"/>

            <TextView
                android:id="@+id/text_label_xpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:text="Xp/Min"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="1"
                android:layout_row="4"/>

            <TextView
                android:id="@+id/text_content_xpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="4"
                tools:text="350"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="3"
                android:layout_row="4"/>

            <TextView
                android:id="@+id/text_content_games_won"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="0"
                android:gravity="end|right"
                tools:text="14"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="3"
                android:layout_row="0"/>

            <TextView
                android:id="@+id/text_label_denies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="4"
                android:text="Denies"/>

            <Space
                android:layout_width="@dimen/dimen_grid_space"
                android:layout_height="@dimen/dimen_grid_space"
                android:layout_column="5"
                android:layout_row="4"/>

            <TextView
                android:id="@+id/text_content_denies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_row="4"
                tools:text="14"/>

        </GridLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>